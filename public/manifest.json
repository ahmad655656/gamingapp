{
  "name": "Haedara Gaming",
  "short_name": "HaedaraGame",
  "description": "تطبيق ألعاب الذكاء والألغاز الممتع من Haedara! اكتشف ألعابًا تختبر ذكاءك وتمنحك التسلية والتحدي في أي وقت.",
  "dir": "rtl",
  "lang": "ar",
  "display": "standalone",
  "start_url": "/",
  "scope": "/",
  "orientation": "portrait",
  "background_color": "#000000",
  "theme_color": "#00ffff",
  "categories": ["games", "puzzle", "entertainment"],
  "iarc_rating_id": "e10f4b0a-0000-0000-0000-000000000000",
  
  "id": "/", 
  
  "prefer_related_applications": false, 

  "screenshots": [
    {
      "src": "/screenshots/mobile-screenshot-1.png",
      "sizes": "642x1341",
      "type": "image/png",
      "platform": "narrow",
      "label": "واجهة الهاتف الرئيسية"
    }
  ],
  
  "display_override": [
    "window-controls-overlay", 
    "standalone"               
  ],

  "scope_extensions": [
    {
      "origin": "https://*.gaming.com"
    }
  ],

  "file_handlers": [
    {
      "action": "/open-level", 
      "accept": {
        "application/json": [".level", ".gameconfig"]
      }
    }
  ],

  "launch_handler": {
    "client_mode": "navigate-existing" 
  },
  
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "application/x-www-form-urlencoded",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  
  "note_taking": {
    "new_window_urls": ["/new-game-note"]
  },

  "icons": [
    {
      "src": "/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "/icons/icon-512x512-1.png",
      "sizes": "512x512",
      "type": "image/png"
    },
    {
      "src": "/icons/maskable_icon.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "shortcuts": [
    {
      "name": "ألعب الآن",
      "short_name": "ألعب",
      "url": "/play",
      "description": "انتقل مباشرة إلى قسم الألعاب المميزة",
      "icons": [{ "src": "/icons/icon-192x192.png", "sizes": "192x192" }]
    },
    {
      "name": "ألعاب جديدة",
      "short_name": "جديد",
      "url": "/new",
      "description": "اكتشف أحدث الألعاب المضافة إلى Haedara Gaming",
      "icons": [{ "src": "/icons/icon-192x192.png", "sizes": "192x192" }]
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+game",
      "url": "/?launch=%s"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  }
}